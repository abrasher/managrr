{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",

    // Allows .vue files to have paths resolved with vite-tsconfig-paths
    "allowJs": true,
    "moduleResolution": "node",
    // Used for Vite
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "incremental": true,

    // helps vite not error when importing types
    "importsNotUsedAsValues": "error",
    "lib": ["esnext"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "../backend/**/*.ts"],
  "files": ["vite.config.ts", "windi.config.ts"]
}
