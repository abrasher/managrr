  "scripts": {
    "open": "open http://localhost:4000/graphql",
    "dev": "yarn open && yarn develop",
    "develop": "ts-node-dev --watch --respawn --project ./tsconfig.json --transpile-only -r tsconfig-paths/register ./main.ts",
    "schema": "ts-node --project ./tsconfig.json --transpile-only -r tsconfig-paths/register ./schema.ts ",
    "db:clear": "mikro-orm schema:drop -r && mikro-orm schema:create -r",
    "db:update": "mikro-orm schema:update -r"
  }
